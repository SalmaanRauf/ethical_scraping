# Required for Semantic Kernel (ATLAS/Azure OpenAI)
OPENAI_API_KEY=
BASE_URL=
API_VERSION=2024-02-15-preview
MODEL=gpt-4o
PROJECT_ID=

# Required for Azure AI Foundry Agents (Bing Grounding)
# Get PROJECT_ENDPOINT from Azure AI Foundry Project overview page
PROJECT_ENDPOINT=
# MODEL_DEPLOYMENT_NAME should be your gpt-4o deployment name (used for intent clarification)
MODEL_DEPLOYMENT_NAME=
# AZURE_BING_CONNECTION_ID is the connection ID for standard Bing Grounding
AZURE_BING_CONNECTION_ID=

# Deep Research configuration (Optional - only if using Deep Research mode)
# IMPORTANT: All Deep Research resources MUST be in the same region (West US or Norway East)
# 
# DEEP_RESEARCH_MODEL_DEPLOYMENT_NAME: Your o3-deep-research model deployment name (version 2025-06-26)
# Must be deployed in the SAME region as PROJECT_ENDPOINT and MODEL_DEPLOYMENT_NAME
DEEP_RESEARCH_MODEL_DEPLOYMENT_NAME=
#
# BING_CONNECTION_NAME: The CONNECTION ID (not name) for Bing Grounding used by Deep Research
# To find this:
#   1. Go to Azure AI Foundry Project â†’ Connected resources
#   2. Find your "Grounding with Bing Search" connection
#   3. Copy the CONNECTION ID (not the display name)
# This may be the same as AZURE_BING_CONNECTION_ID or a separate connection
BING_CONNECTION_NAME=

# Feature flags
# Set to 'true' to enable Deep Research mode (requires all Deep Research config above)
ENABLE_DEEP_RESEARCH=false

# Orchestrator feature flag
ENABLE_TOOL_ORCHESTRATOR=true
