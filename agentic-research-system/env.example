# Azure AI Foundry Configuration (for Bing Grounding)
OPENAI_API_KEY=your_openai_api_key_here
BASE_URL=https://your-resource.openai.azure.com/
PROJECT_ID=your_project_id
API_VERSION=2024-02-15-preview
MODEL=gpt-4o  # Options: gpt-4o, gpt-4o-mini, gpt-4-turbo

# Azure AI Foundry Agents for Bing Grounding
PROJECT_ENDPOINT=https://foundry-dev-your-project.ai.azure.com/
MODEL_DEPLOYMENT_NAME=your_deployment_name
AZURE_BING_CONNECTION_ID=/subscriptions/your-subscription-id/connections/your-bing-connection-id

# Data Extraction APIs
SEC_API_KEY=your_sec_api_key_here
SEC_API_BASE_URL=https://api.sec-api.io
GNEWS_API_KEY=your_gnews_api_key_here
SAM_API_KEY=your_sam_api_key_here

# Validation APIs
Google_Search_API_KEY=your_google_search_api_key_here
GOOGLE_CSE_ID=your_google_cse_id_here
BING_SEARCH_API_KEY=your_bing_search_api_key_here

# Chainlit Configuration
CHAINLIT_HOST=0.0.0.0
CHAINLIT_PORT=8000
CHAINLIT_DEBUG=false

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=300

# Data Storage
DATABASE_PATH=./data/research.db
DATA_DIR=./data
REPORTS_DIR=./reports
LOGS_DIR=./logs

# Company Profiles
PROFILES_DIR=./data/company_profiles

# Error Handling
GRACEFUL_DEGRADATION=true
LOG_ERRORS=true
RETRY_ATTEMPTS=3 