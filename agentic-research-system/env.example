# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4000

# Azure OpenAI Configuration (for Bing Grounding)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# SEC API Configuration
SEC_API_KEY=your_sec_api_key_here
SEC_API_BASE_URL=https://api.sec-api.io

# Chainlit Configuration
CHAINLIT_HOST=0.0.0.0
CHAINLIT_PORT=8000
CHAINLIT_DEBUG=false

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=300

# Rate Limiting
SEC_API_RATE_LIMIT=60
NEWS_API_RATE_LIMIT=100
BING_API_RATE_LIMIT=30

# Data Storage
DATA_DIR=./data
REPORTS_DIR=./reports
LOGS_DIR=./logs

# Company Profiles
PROFILES_DIR=./data/company_profiles

# Error Handling
GRACEFUL_DEGRADATION=true
LOG_ERRORS=true
RETRY_ATTEMPTS=3 